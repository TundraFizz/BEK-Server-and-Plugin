{
  "name": "Forum Enhancer Kit",
  "short_name": "FEK",
  "author": "Tundra Fizz",
  "description": "Enhances the League of Legends boards by providing additional features to it.",
  "version": "5.2.0",

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "96": "icon96.png",
    "128": "icon128.png"
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Forum Enhancement Kit",
    "default_icon": {"128": "icon128.png"}
  },

  "content_scripts": [{
    "matches": ["https://*.leagueoflegends.com/*"],
    "css": ["fek-panel.css", "thread.css"],
    "js": ["jquery.js", "perfect-scrollbar.js", "main.js"],
    "run_at": "document_end"
  }],

  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "*://*.leagueoflegends.com/*",
    "*://tundrafizz.space/*"
  ],

  "web_accessible_resources": [
    "img/*.gif",
    "img/logo.png",
    "img/*.png"
  ],

  "manifest_version": 2
}
